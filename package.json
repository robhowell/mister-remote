{
  "name": "mister-remote",
  "version": "1.0.0",
  "description": "Remote control of a MiSTer-based system",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "start:client": "cd client && npm start",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "update-dependencies": "ncu -u && npm i"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robhowell/mister-remote.git"
  },
  "author": "Rob Howell <rob@robhowell.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robhowell/mister-remote/issues"
  },
  "homepage": "https://github.com/robhowell/mister-remote#readme",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "babel-eslint": "^9.0.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "nodemon": "^2.0.3",
    "ssh2-promise": "^0.1.6"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-config-semipretty": "^4.0.0",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.2",
    "npm-check-updates": "^4.1.2",
    "prettier": "^1.19.1"
  }
}
